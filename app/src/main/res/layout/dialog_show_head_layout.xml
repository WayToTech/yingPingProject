<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_show_head_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:gravity="center"
            android:padding="15dp"
            android:text="查看头像"
            android:textColor="@color/gray"
            android:textSize="17sp" />

        <View style="@style/line_horizontal" />


        <TextView
            android:id="@+id/dialog_edit_head_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:gravity="center"
            android:padding="15dp"
            android:text="修改头像"
            android:textColor="@color/gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@color/ksw_md_ripple_normal" />


        <TextView
            android:id="@+id/dialog_cancle_head_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/dialog_defalut_cancel_text"
            android:textColor="@color/gray"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>