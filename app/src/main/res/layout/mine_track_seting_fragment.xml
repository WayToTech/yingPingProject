<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wayto.android.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/line_horizontal"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_seletor"
                android:orientation="horizontal"
                android:paddingLeft="16dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="15dip"
                    android:text="步行"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <com.wayto.android.view.SwitchButton
                    android:id="@+id/messageSetingFragment_walk_switchButton"
                    style="@style/SwitchButtonMD"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View style="@style/line_horizontal"
                android:layout_marginLeft="16dip"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_seletor"
                android:orientation="horizontal"
                android:paddingLeft="16dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="15dip"
                    android:text="骑行"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <com.wayto.android.view.SwitchButton
                    android:id="@+id/messageSetingFragment_riding_switchButton"
                    style="@style/SwitchButtonMD"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View style="@style/line_horizontal"
                android:layout_marginLeft="16dip"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_seletor"
                android:orientation="horizontal"
                android:paddingLeft="16dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="15dip"
                    android:text="驾驶"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <com.wayto.android.view.SwitchButton
                    android:id="@+id/messageSetingFragment_drive_switchButton"
                    style="@style/SwitchButtonMD"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View style="@style/line_horizontal" />
        </LinearLayout>
    </com.wayto.android.view.ReboundScrollView>
</LinearLayout>