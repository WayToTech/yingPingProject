<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wayto.android.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fillBaseFragment_bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fillBaseFragment_content_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:text="添加图片"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/fillBaseFragment_add_img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </com.wayto.android.view.ReboundScrollView>

    <LinearLayout
        android:id="@+id/fillBaseFragment_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dip">

        <Button
            android:id="@+id/fillBaseFragment_save_btn"
            style="@style/formButton"
            android:background="@drawable/common_btn_red_selector"
            android:text="@string/save" />

        <Button
            android:id="@+id/fillBaseFragment_submit_btn"
            style="@style/formButton"
            android:layout_marginLeft="10dip"
            android:background="@color/colorPrimary"
            android:text="@string/submit" />
    </LinearLayout>
</RelativeLayout>