<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vote_button"
        android:orientation="vertical">


        <TextView
            android:id="@+id/VoteActivity_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="参与人数14"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/VoteActivity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/VoteActivity_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparency"
            android:divider="@color/transparency"/>

    </LinearLayout>

    <Button
        android:id="@+id/vote_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_red"
        android:text="投票"
        android:textColor="@color/white" />
</RelativeLayout>